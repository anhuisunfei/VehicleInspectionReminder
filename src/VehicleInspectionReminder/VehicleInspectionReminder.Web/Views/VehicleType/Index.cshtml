@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var vehicleTypeList = ViewBag.List as IEnumerable<VehicleInspectionReminder.Model.VehicleType>;
}

<div class="row">
    <div class="col-md-12">
        <div class="widget-box">
            <div class="widget-header widget-header-small">
                <h5 class="widget-title lighter">新增违章类型</h5>
            </div>

            <div class="widget-body">
                <div class="widget-main">
                    <form class="form-search" action="@Url.Action("AddVehicleType")" method="post">
                        <div class="row">
                            <div class="col-xs-12 col-sm-8">
                                @if (!string.IsNullOrWhiteSpace(ViewBag.Message as string))
                                {
                                <div class="alert alert-danger">
                                    <button type="button" class="close" data-dismiss="alert">
                                        <i class="ace-icon fa fa-times"></i>
                                    </button>
                                    @ViewBag.Message
                                    <br>
                                </div>
                                }
                                <div class="input-group">
                                    <input type="text" name="name" class="form-control search-query" placeholder="违章类型名称" />
                                    <span class="input-group-btn">
                                        <button type="submit" class="btn btn-purple btn-sm">
                                            <span class="ace-icon fa fa-plus icon-on-right bigger-110"></span>
                                            添加违章类型
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="widget-box">
            <div class="widget-header widget-header-small">
                <h5 class="widget-title lighter">品牌列表</h5>
            </div>

            <div class="widget-body">
                <div class="widget-main">
                    <table class="table-bordered table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>名称</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in vehicleTypeList)
                                {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.VehicleTypeName</td>
                                <td>@Ajax.ActionLink("删除", "Delete", new { id = item.Id }, new AjaxOptions { Confirm = "确认删除?", OnSuccess = "deleteElement", HttpMethod = "POST" })</td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
@section tailScript{
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    <script type="text/javascript">
        function deleteElement(ret) {
            alert("删除成功");
            window.location.reload();
        }
    </script>
}